# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index
GET     /data/:collection           controllers.DataApi.getCollection(collection)
GET     /data/:collection/:id       controllers.DataApi.getEntity(collection, id)

POST    /users/:username/login            controllers.Auth.login(username)

# for testing
GET     /headers                    controllers.Auth.headers
GET     /secured                    controllers.DataApi.test

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
